{
  "name": "@flightpath/autopilot",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "check-types": "tsc --noEmit",
    "clean": "rimraf node_modules dist",
    "fix": "run-s _lint:fix _format:fix",
    "lint": "run-s _lint _format",
    "_format": "prettier --list-different '*.{js,ts,json,md}' 'src/**/*.{css,js,jsx,ts,tsx,json,md}'",
    "_format:fix": "npm run _format -- --write",
    "_lint": "eslint .",
    "_lint:fix": "npm run _lint -- --fix"
  },
  "dependencies": {
    "@base-ui/react": "^1.1.0",
    "@fontsource-variable/inter": "^5.2.8",
    "@fontsource-variable/roboto-mono": "^5.2.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.563.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25.1.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "^9.39.2",
    "shadcn": "^3.7.0",
    "tailwindcss": "^4.1.18",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.3"
  },
  "exports": {
    "./components/*": "./src/components/*.tsx",
    "./globals.css": "./src/styles/globals.css",
    "./providers/*": "./src/providers/*.tsx",
    "./hooks/*": "./src/hooks/*.ts",
    "./postcss.config": "./postcss.config.mjs",
    "./types/*": "./src/types/*.ts",
    "./utils/*": "./src/utils/*.ts"
  }
}
